*
	margin 0

html, body
	height 100%

body
	background-color #fcfcfc

.gallery
	width 600px
	margin 10px auto

.gallery ul
	list-style none
	
.gallery ul li
	border solid 1px #ddd
	border-bottom none
	padding 5px
	display flex
	align-items center

.gallery ul li:last-child
	border-bottom solid 1px #ddd

.gallery ul li > span
	padding 0 15px

.thumbnail
	width 50px
	border solid 1px #ddd

#fullSize
	display flex 
	justify-content center
	align-items center
	background-color rgba(0,0,0,.5)
	position fixed
	top 0
	left 0
	width 100%
	height 100%
